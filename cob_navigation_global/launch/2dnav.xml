<?xml version="1.0"?>
<launch>

  <!-- <arg name="robot" default="raw3-6"/> -->
  <arg name="robot" default="$(optenv ROBOT !!NO_ROBOT_SET!!)"/>
  <!-- <arg name="robot_env" default="ipa-kitchen"/> -->
  <arg name="robot_env" default="$(optenv ROBOT_ENV !!NO_ROBOT_ENV_SET!!)"/>
  <arg name="pkg_nav_config" default="$(find cob_navigation_config)"/>
  <arg name="base_navigation_local_planner" default="$(optenv BASE_NAVIGATION_LOCAL_PLANNER !!NO_BASE_NAVIGATION_LOCAL_PLANNER_SET!!)"/>
  <arg name="base_navigation_global_planner" default="$(optenv BASE_NAVIGATION_GLOBAL_PLANNER !!NO_BASE_NAVIGATION_GLOBAL_PLANNER_SET!!)"/>

  <arg name="pkg_env_config" default="$(find cob_default_env_config)"/>
  <arg name="map" default="$(arg pkg_env_config)/envs/$(arg robot_env)/map.yaml" />

  <!--- Run map_server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map)"/>

  <!--- Run AMCL -->
  <include file="$(find cob_navigation_global)/launch/amcl_node.xml" >
    <arg name="robot" value="$(arg robot)"/>
  </include>



  <!-- delete old parameters -->
  <rosparam command="delete" param="/move_base"/>

  <!--- Run move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <remap from="cmd_vel" to="base/twist_mux/command_navigation"/>
    <remap from="odom" to="base/odometry_controller/odometry"/>
    <param name="controller_frequency" value="10"/>

    <!--- load common configuration files -->
    <rosparam file="$(arg pkg_nav_config)/robots/$(arg robot)/nav/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(arg pkg_nav_config)/robots/$(arg robot)/nav/costmap_common_params.yaml" command="load" ns="local_costmap" />

    <!--- load global navigation specific parameters -->
    <rosparam file="$(find cob_navigation_global)/config/local_costmap_params.yaml" command="load" ns="local_costmap"/>
    <rosparam file="$(find cob_navigation_global)/config/global_costmap_params.yaml" command="load" ns="global_costmap"/>

    <!--- load planners -->
    <param name="base_local_planner" value="$(arg base_navigation_local_planner)"/>
    <param name="base_global_planner" value="$(arg base_navigation_global_planner)"/>

    <!--- load planner parameters -->
    <!-- <rosparam file="$(arg pkg_nav_config)/robots/$(arg robot)/nav/base_local_planner_params.yaml" command="load"/> -->
    <rosparam file="$(arg pkg_nav_config)/robots/$(arg robot)/nav/$(arg base_navigation_local_planner)_global.yaml" command="load"/>
  </node>

</launch>
